<div style="min-height:100vh; display:flex; align-items:center; justify-content:center; background:#f5f7fb;">
  <div style="background:#ffffff; padding:32px 40px; border-radius:18px; box-shadow:0 10px 30px rgba(0,0,0,0.08); max-width:460px; width:100%;">

    <p style="margin:0 0 20px; color:#6b7280;">
      Войдите в свой аккаунт
    </p>

    <%= form_with scope: :user, url: user_session_path, method: :post, local: true do |f| %>

      <div style="margin-bottom:14px;">
        <label style="display:block; margin-bottom:6px; color:#374151; font-size:14px;">
          Email
        </label>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          placeholder: "you@example.com",
                          required: true,
                          style: "width:100%; padding:10px 12px; border-radius:10px; border:1px solid #d1d5db; font-size:14px;" %>
      </div>

      <div style="margin-bottom:18px;">
        <label style="display:block; margin-bottom:6px; color:#374151; font-size:14px;">
          Пароль
        </label>
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             placeholder: "********",
                             required: true,
                             style: "width:100%; padding:10px 12px; border-radius:10px; border:1px solid #d1d5db; font-size:14px;" %>
      </div>

      <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:16px;">
        <label style="display:flex; align-items:center; gap:6px; font-size:13px; color:#4b5563;">
          <%= f.check_box :remember_me %>
          Запомнить меня
        </label>

        <%= link_to "Забыли пароль?",
                    new_user_password_path,
                    style: "font-size:13px; color:#2563eb; text-decoration:none;" %>
      </div>

      <%= f.submit "Войти",
                   style: "width:100%; padding:12px 14px; border-radius:12px; border:none; background:#2563eb; color:#fff; font-weight:600; font-size:15px; cursor:pointer;" %>

    <% end %>

    <p style="margin-top:16px; text-align:center; font-size:13px; color:#6b7280;">
      Нет аккаунта?
      <%= link_to "Зарегистрироваться",
                  new_user_registration_path,
                  style: "color:#2563eb; text-decoration:none;" %>
    </p>

  </div>
</div>
